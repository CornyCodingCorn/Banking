<UserControl x:Class="CornUI.Controls.Normal.CIcon"
             x:Name="root"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CornUI.Controls.Normal"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="50">
    <Rectangle Fill="{Binding ElementName=root, Path=ImageColor}">
        <Rectangle.OpacityMask>
            <ImageBrush ImageSource="{Binding ElementName=root, Path=ClipImage}"
                        Stretch="Uniform">
            </ImageBrush>
        </Rectangle.OpacityMask>
    </Rectangle>
</UserControl>
